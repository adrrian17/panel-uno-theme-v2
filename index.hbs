{{!< default}}
<div class="max-w-screen-lg px-8 mx-auto">
    {{!-- {{> intro}} --}}
</div>
<div class="flex flex-col max-w-screen-xl px-8 mx-auto mt-24 mb-12">
    <div class="mb-8">
        <h2 class="mr-6 text-4xl font-black uppercase font-barlow heading">Ediciones Recientes</h2>
    </div>
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
        {{#get "posts" limit="6" order="published_at desc" include="tags" filter="tag:-[hash-oculto]"}}
            {{#foreach posts}}
                {{> card}}
                {{else}}
                    <p class="text-lg font-barlow">Aún no hay ediciones publicadas.</p>
            {{/foreach}}
        {{/get}}
    </div>
    <div class="flex justify-center mt-14">
        <a href="/archivo"
            class="text-white uppercase bg-brand-700 hover:bg-brand-800 focus:ring-4 focus:ring-brand-300 font-semibold rounded-full text-sm px-5 py-2.5 me-2 mb-2 dark:bg-brand-600 dark:hover:bg-brand-700 focus:outline-none dark:focus:ring-brand-800">
            Más Ediciones
        </a>
    </div>
</div>