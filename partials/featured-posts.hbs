<div class="max-w-screen-xl px-8 mx-auto mb-24">
    <div class="mb-8">
        <h2 class="mr-6 text-4xl font-black uppercase font-barlow heading">Destacados</h2>
    </div>
    {{#get "posts" limit="3" order="published_at desc" include="tags" filter="tag:-[creador]+featured:true"}}
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
            {{#foreach posts}}
                {{> card}}
            {{/foreach}}
        </div>
    {{/get}}
</div>
